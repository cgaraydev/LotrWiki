<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_dropdown_background</item>
        <item name="android:textColor">@color/spinner_item_color_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="fontFamily">@font/ring_bearer_medium</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>