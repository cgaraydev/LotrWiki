<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/tvTriviaWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ready_trivia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/golden"
        app:layout_constraintVertical_bias="0.3"
        android:fontFamily="@font/ring_bearer_medium"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tvTriviaWelcome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contesta 10 preguntas correctas para obtener el rango maximo!"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTriviaWelcome"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartNavTrivia"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="empezar"
        android:textSize="28sp"
        android:fontFamily="@font/ring_bearer_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTriviaWelcome2" />

    <TextView
        android:id="@+id/tvTriviaIntroExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="salir"
        app:layout_constraintTop_toBottomOf="@id/btnStartNavTrivia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/golden"
        android:layout_marginTop="18dp"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>