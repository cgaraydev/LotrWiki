                android:layout_height="wrap_content"/>

            <com.example.lotrwiki.utils.customviews.CustomCharacterCategory
                android:id="@+id/categoryMen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.example.lotrwiki.utils.customviews.CustomCharacterCategory
